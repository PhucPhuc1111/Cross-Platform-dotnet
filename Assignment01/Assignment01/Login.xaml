<Window x:Class="SalesWPFApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <StackPanel Background="LightBlue" Orientation ="Vertical" HorizontalAlignment="Center" Width="400" Height="200">
            <Label Name="lbTitle" Foreground="Red" FontWeight="DemiBold" FontSize="20" Content="Login" />
            <Label Name="lbEmail" Content="Email"/>

            <TextBox Name="txtEmail" Height="25" Margin="0 0 0 0" HorizontalAlignment="Stretch" Width="400" />


            <Label Name="lbPass" Content="Password" />
            <TextBox Name="txtPass" HorizontalAlignment="Stretch" Margin="0 0 0 0"  Height="25"  Width="400" />

            <Button x:Name="btnLogin" Margin="10" Width="80" Content="Login"  Click="btnLogin_Click"/>


        </StackPanel>
    </Grid>
</Window>

